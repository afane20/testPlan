.resourceHeader
   ul
      li
         span(1/9) !important
      
.active
   header
      background green !important

.activeTag
   bold()
   margin 0
   padding 0
   float right
   background lighten(green, 20)

.regFee
   position absolute
   top 100px
   right 0
   left 0

